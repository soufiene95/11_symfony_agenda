{% extends 'themes/base.html.twig' %}

{% block title %}
	Liste des contacts
{% endblock %}

{% block description %}
	Consultez la liste de vos contacts.
{% endblock %}

{% block main %}
	<h1 class="text-center my-3 display-5">Liste des contacts</h1>

    {% for message in app.flashes('success') %}
        <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
            {{message|raw}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-end alig-items-center my-3">
        <a href="{{path('app_create')}}" class="btn btn-primary shadow">Nouveau contact</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Commentaires</th>
                    <th>Créé le</th>
                    <th>modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{contact.id}}</td>
                        <td>{{contact.firstName}}</td>
                        <td>{{contact.lastName}}</td>
                        <td>{{contact.email}}</td>
                        <td>{{contact.phone}}</td>
                        <td>{{contact.comment ? contact.comment : 'NULL'}}</td>
                        <td>{{contact.createdAt ? contact.createdAt|format_datetime() : 'NULL'}}</td>
                        <td>{{contact.updatedAt ? contact.updatedAt|format_datetime() : 'NULL'}}</td>
                        <td>
                            <a href="{{path('app_edit', {'id':contact.id})}}" class="btn btn-sm btn-secondary">Modifier</a>
                            <form class="d-inline" method="POST" action="{{path('app_delete', {'id':contact.id})}}" onclick="return confirm('Confirmer la suppression?')">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('delete_contact_'~contact.id)}}">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="submit" class="btn btn-sm btn-danger" value="Supprimer">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
